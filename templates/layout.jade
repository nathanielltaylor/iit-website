doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width')
    title= locals.title
    link(rel="icon", type="image/png", href="/img/favicon.png")
    link(href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css", rel="stylesheet")
    script(src="https://google-code-prettify.googlecode.com/svn/loader/run_prettify.js")
    link(rel='stylesheet', href='/css/main.css')
  body(data-spy="scroll", data-target=".iit-sidebar" data-offset="60")
    header.navbar.navbar-inverse.navbar-fixed-top(role="banner")
      .container
        .navbar-header
          button.navbar-toggle(type="button", data-toggle="collapse", data-target=".iit-navbar-collapse")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="/index.html") IIT
        nav.collapse.navbar-collapse.iit-navbar-collapse(role="navigation")
          ul.nav.navbar-nav
            li
              a(href="/index.html") Home
            li
              a(href="/paper.html") Paper
            li
              a(href="/explore.html") Compute <span class="math-font">&Phi;</span>
          ul.nav.navbar-nav.navbar-right
            li
              a(href="/about.html") About
    .iit-header
      .container
        img.logo.img-responsive(src='/img/logo.png', alt="Logo")
        p Resources for learning about
        h1 Integrated Information Theory
    #content
      .wrap
        != typogr(page.html).typogrify()
        block content
          footer.iit-footer
            block footer
              section.copy
                .wrap
                  - var d = new Date();
                  p Copyright &copy; #{d.getFullYear()} #{locals.owner}&nbsp;&nbsp;&middot;&nbsp;&nbsp;Updated #{d.getMonth()}/#{d.getDate()}/#{d.getFullYear()}
    // jQuery
    script(src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js")
    // Bootstrap JS
    script(src="//netdna.bootstrapcdn.com/bootstrap/3.0.2/js/bootstrap.min.js")
    // MathJax
    script(src="https://c328740.ssl.cf1.rackcdn.com/mathjax/latest/MathJax.js?config=TeX-AMS-MML_HTMLorMML")
    script(type="text/javascript").
      MathJax.Hub.Config({
        "HTML-CSS": {
          availableFonts: ["TeX"],
          styles: {
            ".MathJax_Display": {
              color: "inherit"
            },
          }
        }
      });
    script(src="/js/main.min.js")
