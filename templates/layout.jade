doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width')
    title= locals.title
    link(rel="icon", type="image/png", href="/img/favicon.png")
    link(href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css", rel="stylesheet")
    script(src="https://google-code-prettify.googlecode.com/svn/loader/run_prettify.js")
    link(rel='stylesheet', href='/css/main.css')
  body(data-spy="scroll", data-target=".iit-sidebar" data-offset="60")
    .navbar.navbar-inverse.navbar-fixed-top(role="navigation")
      .container
        .navbar-header
          button.navbar-toggle(type="button", data-toggle="collapse", data-target="#iit-navbar-collapse")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="/index.html") IIT
        .collapse.navbar-collapse#iit-navbar-collapse
          ul.nav.navbar-nav
            li
              a(href="/index.html") Home
            li
              a(href="/about.html") About
            //- li
            //-   a(href="/paper.html") Paper
            //- li
            //-   a(href="/explore.html") Compute <span class="math-font">&Phi;</span>
          //- ul.nav.navbar-nav.navbar-right
    .container#content
      .wrap
        != typogr(page.html).typogrify()
        block content
    .footer
      .container-fluid
        - var d = new Date();
        p.copy &copy; Copyright #{d.getFullYear()} #{locals.owner}&nbsp;&nbsp;&middot;&nbsp;&nbsp;Updated #{d.getMonth()}/#{d.getDate()}/#{d.getFullYear()}
    // jQuery
    script(src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js")
    // Bootstrap JS
    script(src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js")
