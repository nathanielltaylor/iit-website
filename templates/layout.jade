doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width')
    title= locals.title
    link(rel="icon", type="image/png", href="/img/favicon.png")
    link(href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css", rel="stylesheet")
    script(src="https://google-code-prettify.googlecode.com/svn/loader/run_prettify.js")
    link(rel='stylesheet', href='/css/main.css')
  body
    header.header
      .wrap
        a(href=locals.url)
          img.logo.img-responsive(src='/img/logo.png', alt="Logo")
          h1.name= locals.name
        .description= locals.description
        .email
          Contact
        .visible-xs
          #main-nav.btn-group.btn-group-md(role="navigation")
            a(href='#').btn.btn-default(type="button") Home
            a(href='#').btn.btn-default(type="button") Calculate &Phi;
            a(href='#').btn.btn-default(type="button") Resources
        .visible-sm
          #main-nav.btn-group.btn-group-md(role="navigation")
            a(href='#').btn.btn-default(type="button") Home
            a(href='#').btn.btn-default(type="button") Calculate &Phi;
            a(href='#').btn.btn-default(type="button") Resources
        .hidden-xs.hidden-sm
          #main-nav.btn-group-vertical.btn-group-lg(role="navigation")
            a(href='#').btn.btn-default(type="button") Home
            a(href='#').btn.btn-default(type="button") Calculate &Phi;
            a(href='#').btn.btn-default(type="button") Resources
        // nav.navbar.navbar-default(role='navigation')
          // Brand and toggle get grouped for better mobile display
          .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='navbar-collapse-1')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='#') IIT
          // Collect the nav links, forms, and other content for toggling
          #navbar-collapse-1.collapse.navbar-collapse
            ul.nav.navbar-nav
              li.active
                a(href='/index.html') Paper
              li
                a(href='Code') 
    #header-background.visible-sm
    // #fadeout.visible-sm
    #content.container
      .wrap
        != typogr(page.html).typogrify()
        block content
          footer
            block footer
              section.copy
                .wrap
                  p &copy; #{ new Date().getFullYear() } #{ locals.owner } &nbsp;&nbsp;&middot;&nbsp;&nbsp;Updated 11/16/13
    // jQuery
    script(src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js")
    // Bootstrap JS
    script(src="//netdna.bootstrapcdn.com/bootstrap/3.0.2/js/bootstrap.min.js")
    // MathJax
    script(src="https://c328740.ssl.cf1.rackcdn.com/mathjax/latest/MathJax.js?config=TeX-AMS-MML_HTMLorMML")
    script(type="text/javascript").
      MathJax.Hub.Config({
        "HTML-CSS": {
          availableFonts: ["TeX"],
          styles: {
            ".MathJax_Display": {
              color: "inherit"
            },
          }
        }
      });
