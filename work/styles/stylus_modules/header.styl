.header
  position fixed
  z-index 10
  top 0
  right 0
  bottom 0
  left auto
  text-align center
  >.wrap
    margin-top global_top_margin
    position absolute
    left 0
    top 0
    width 267px
  a
    color sol_emphasize
    &:hover
      color link_color
      text-decoration none
  .logo 
    height 115px
    margin auto
  .name
    margin 25px 0 15px 0
    font-family 'Varela Round'
    text-align center
    font-size 150%
    text-transform uppercase
    letter-spacing 0.2ex
    color base02
  .description
    font-size base_font_size
    padding 0
    letter-spacing 0.13ex
  .email
    font-size 75%
    color sol_secondary
    margin 20px 0 20px 0
    text-align right

// xs
unquote("@media (max-width: "+xs_max+") {")
.header
  font-size 25px
  position static
  width 100%
  text-align center
  >.wrap
    padding header_padding header_padding 0 header_padding
    position static
    width 100%
    height 100%
    margin 0
  .logo
    margin 0 auto
    height 50px
  .name
    margin 15px auto 5px auto
    font-size 30px
  .description
    margin 0 auto
    padding 0
    font-size 19px
  .email
    text-align center
    margin 10px auto
    font-size 15px
  #main-nav
    box-sizing content-box
    margin 0 auto
unquote("}")

// sm
unquote("@media (min-width: "+sm_min+") and (max-width: "+sm_max+") {")
.header
  width 100%
  height header_height
  text-align left
  >.wrap
    position relative
    width 100%
    height 100%
    padding header_padding
    margin 0
  .logo
    float left
    margin-top: 10px
  .name
    text-align left
    margin 0 10px 9px 145px
    font-size 180%
  .description
    font-size 100%
    text-align left
    margin 20px 10px 10px 145px
  .email
    font-size 70%
    position absolute
    top 3px
    right header_padding
  #main-nav
    position absolute
    bottom header_padding
    right header_padding - 5px
  .navbar
    margin-top 15px
unquote("}")

// md
unquote("@media (min-width: "+md_min+") and (max-width: "+md_max+") {")
.header
  width 30%
unquote("}")

// lg
unquote("@media (min-width: "+lg_min+") {")
.header
  width 25%
#main-nav
  margin-top 20px
unquote("}")

// sm, md, lg
unquote("@media (min-width: "+sm_min+") {")
.navbar-nav
  float none
  margin 0 auto
  display table
  table-layout fixed
unquote("}")

