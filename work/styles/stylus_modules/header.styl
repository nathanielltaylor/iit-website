.iit-header
  margin 40px 0 0 0
  .jumbotron
    padding 20px
    margin-bottom 0px
  .title
    display inline-block
    vertical-align middle
    width 75%
    margin-left 25px
    h1
      font-family 'Varela Round'
      text-transform uppercase
      line-height 1.3
      letter-spacing 0.1ex
      word-spacing 0.3ex
      font-size 125%
      margin-top 0
      margin-bottom 0
    p
      font-size 70%
      font-weight 300
      line-height 1.5
      margin-bottom 5px
      margin-top 0
      padding-top 5px
  .logo
    display inline-block
    width 15%
    max-width 75px
    vertical-align middle
    text-align center
    padding 0
    margin 10px
    img
      max-width 100%
      max-height 75px
p.lead
  margin-top 30px
  margin-bottom 0

// xs
unquote("@media (max-width: "+xs_max+") {")
.iit-header
  margin 20px 0 0 0
  .jumbotron
    .logo
      width 17%
      margin 0
      max-width 80px
      img
        max-height 70px
    .title
      width 65%
      @media (min-width: 568px)
        width 75%
      margin-left 15px
      h1
        margin 5px 0 0 0
        font-size 80%
        @media (min-width: 568px)
          font-size 90%
p.lead
  margin-top 20px
  margin-bottom 0
unquote("}")

// sm
unquote("@media (min-width: "+sm_min+") and (max-width: "+sm_max+") {")
.iit-header
  .title
    h1
      font-size 100%
    p
      80%
unquote("}")

// md
unquote("@media (min-width: "+md_min+") and (max-width: "+md_max+") {")
.iit-header
  .title
    h1
      font-size 110%
    p
      80%
unquote("}")

// lg
unquote("@media (min-width: "+lg_min+") {")
unquote("}")

// md, lg
unquote("@media (min-width: "+md_min+") {")
unquote("}")
