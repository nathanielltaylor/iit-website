.alert
  font-size 90%
  border none
  border-left 3px solid link_color
  border-radius 3px
  color sol_primary
  margin 1em 0
  >code
    background-color sol_background
  >p+p
    margin-top 10px

.alert-info
  background-color sol_highlight
.alert-warning
  background-color warning_bg
.alert-danger
  background-color danger_bg

.alert-banner
  margin-top 40px
  margin-bottom 0px
  font-size inherit

.alert
  h1, h2, h3, h4, h5, h6
    margin-top 0

