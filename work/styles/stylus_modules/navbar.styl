.navbar-inverse
  border none
  color sol_secondary
.navbar
  .navbar-brand
    font-family display_font
    font-size 120%
    letter-spacing 0.25ex
    color sol_background
  ul.navbar-nav
    >li
      >a
        padding-left 20px
        padding-right 20px
        color inherit
        &:hover
          color lighten(sol_secondary, 50%)
      >a.active
        background-color darken(navbar_background, 80%)
        color lighten(sol_secondary, 50%)

// xs
unquote("@media (max-width: "+xs_max+") {")

navlink_xs_left_right_padding = 15px
navlink_hover_highlight-width = 5px

.navbar-inverse
  ul.navbar-nav
    margin-top 1px
    margin-bottom 1px
    >li>a
      padding-left navlink_xs_left_right_padding
      &:hover, &.active
        padding-left navlink_xs_left_right_padding - navlink_hover_highlight-width
        border-left navlink_hover_highlight-width solid cyan
unquote("}")

// sm, md, lg
unquote("@media (min-width: "+sm_min+") {")
.navbar-inverse
  ul.navbar-nav
    >li>a
      &:hover, &.active
        padding-bottom 10px
        border-bottom 5px solid cyan
unquote("}")
